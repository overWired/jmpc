<?xml version="1.0" encoding="UTF-8" ?>
<configuration debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>"%date{ISO8601} [%-5level] %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.bff.javampd.server.MPDProperties" level="WARN" />
    <logger name="org.bff.javampd.server.MPDSocket" level="INFO" />

    <logger name="org.overwired" level="DEBUG" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

</configuration>
